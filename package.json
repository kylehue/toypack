{
   "name": "toypack",
   "description": "A sandbox bundler for browsers.",
   "version": "0.0.4-development",
   "type": "module",
   "main": "./build/Toypack.js",
   "types": "./build/Toypack.d.ts",
   "license": "MIT",
   "author": "kylehue",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/kylehue/toypack.git"
   },
   "homepage": "https://github.com/kylehue/toypack#readme",
   "engines": {
      "node": "^18.12.0",
      "npm": "^9.6.5"
   },
   "volta": {
      "node": "18.12.0",
      "npm": "9.6.5"
   },
   "publishConfig": {
      "access": "public"
   },
   "scripts": {
      "dev": "concurrently \"set NODE_ENV=development\" \"npm run clean\" \"npm run build:main -- --watch\" \"npm run build:bundle -- --watch\" \"npm run type:dts -- --watch\" \"npm run build:style -- --watch\" \"npm run build:example -- --watch\"",
      "build": "concurrently \"set NODE_ENV=production\" \"npm run clean\" \"npm run build:main\" \"npm run build:bundle\" \"npm run type:dts\" \"npm run build:style\"",
      "build:main": "swc ./src -d ./build",
      "build:example": "swc ./example -d ./example-build",
      "build:style": "sass ./styles/style.scss:./build/styles/style.css",
      "build:bundle": "esbuild ./src/Toypack.ts --bundle --outdir=browser --format=iife --global-name=Toypack --platform=browser --sourcemap",
      "clean": "rimraf build example-build browser coverage nyc_output",
      "type:dts": "tsc --emitDeclarationOnly --project tsconfig.build.json",
      "type:check": "tsc --noEmit",
      "format": "prettier \"src/**/*.ts\" --write",
      "format:check": "prettier \"src/**/*.ts\" --check",
      "lint": "eslint src --ext .ts --fix",
      "lint:check": "eslint src --ext .ts",
      "test": "vitest run",
      "test:watch": "vitest watch",
      "test:coverage": "vitest run --coverage",
      "cz": "cz",
      "semantic-release": "semantic-release"
   },
   "devDependencies": {
      "@ryansonshine/commitizen": "^4.2.8",
      "@ryansonshine/cz-conventional-changelog": "^3.3.4",
      "@semantic-release/changelog": "^6.0.3",
      "@semantic-release/commit-analyzer": "^9.0.2",
      "@semantic-release/github": "^8.0.7",
      "@semantic-release/npm": "^10.0.0-beta.4",
      "@semantic-release/release-notes-generator": "^10.0.3",
      "@swc/cli": "^0.1.62",
      "@swc/core": "^1.3.52",
      "@types/node": "^18.15.12",
      "@types/path-browserify": "^1.0.0",
      "@types/prompts": "^2.4.4",
      "@typescript-eslint/eslint-plugin": "^5.59.0",
      "@typescript-eslint/parser": "^5.59.0",
      "c8": "^7.13.0",
      "concurrently": "^8.0.1",
      "edit-package-json": "^0.8.12",
      "esbuild": "^0.17.18",
      "eslint": "^8.38.0",
      "eslint-config-prettier": "^8.8.0",
      "eslint-import-resolver-typescript": "^3.5.5",
      "eslint-plugin-eslint-comments": "^3.2.0",
      "eslint-plugin-import": "^2.27.5",
      "jsdom": "^21.1.1",
      "nyc": "^15.1.0",
      "prettier": "^2.8.7",
      "rimraf": "^4.4.1",
      "sass": "^1.62.0",
      "semantic-release": "^21.0.1",
      "source-map-support": "^0.5.21",
      "typescript": "^5.0.4",
      "vitest": "^0.29.8"
   },
   "files": [
      "./build",
      "./browser"
   ],
   "keywords": [
      "build",
      "build tool",
      "bundle",
      "bundler",
      "sandbox"
   ]
}
